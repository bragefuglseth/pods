<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PdsContainersRow" parent="GtkWidget">
    <style>
      <class name="sidebar-row"/>
    </style>
    <property name="layout-manager">
      <object class="GtkBoxLayout">
        <property name="spacing">12</property>
      </object>
    </property>

    <child>
      <object class="GtkImage">
        <property name="icon-name">package-x-generic-symbolic</property>
      </object>
    </child>

    <child>
      <object class="GtkLabel">
        <property name="ellipsize">end</property>
        <property name="label" translatable="yes">Containers</property>
        <property name="hexpand">True</property>
        <property name="xalign">0</property>
      </object>
    </child>

    <child>
      <object class="GtkBox">
        <property name="spacing">6</property>

        <child>
          <object class="GtkLabel">
            <style>
              <class name="status-badge-small"/>
              <class name="container-status-running"/>
            </style>
            <binding name="label">
              <lookup name="running" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
            <binding name="visible">
              <lookup name="running" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
          </object>
        </child>

        <child>
          <object class="GtkLabel">
            <style>
              <class name="status-badge-small"/>
              <class name="container-status-paused"/>
            </style>
            <binding name="label">
              <lookup name="paused" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
            <binding name="visible">
              <lookup name="paused" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
          </object>
        </child>

        <child>
          <object class="GtkLabel">
            <style>
              <class name="status-badge-small"/>
              <class name="container-status-stopped"/>
            </style>
            <binding name="label">
              <lookup name="not-running" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
            <binding name="visible">
              <lookup name="not-running" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
          </object>
        </child>

        <child>
          <object class="GtkLabel">
            <style>
              <class name="status-badge-small"/>
              <class name="container-status-dead"/>
            </style>
            <binding name="label">
              <lookup name="dead" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
            <binding name="visible">
              <lookup name="dead" type="ContainerList">
                <lookup name="container-list">PdsContainersRow</lookup>
              </lookup>
            </binding>
          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
