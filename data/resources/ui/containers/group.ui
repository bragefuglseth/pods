<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <menu id="menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Play _Kubernetes YAMLâ€¦</attribute>
        <attribute name="action">win.play-kubernetes</attribute>
      </item>
    </section>
  </menu>

  <object class="AdwSplitButton" id="create_container_split_button">
    <style>
      <class name="flat"/>
    </style>
    <property name="action-name">containers-group.create-container</property>
    <property name="icon-name">list-add-symbolic</property>
    <property name="menu-model">menu</property>
  </object>

  <object class="GtkListBoxRow" id="create_container_row">
    <property name="action-name">containers-group.create-container</property>
    <property name="selectable">False</property>

    <child>
      <object class="GtkImage">
        <property name="icon-name">list-add-symbolic</property>
        <property name="margin-top">15</property>
        <property name="margin-bottom">15</property>
      </object>
    </child>

  </object>

  <template class="PdsContainersGroup" parent="AdwPreferencesGroup">
    <property name="header-suffix">
      <object class="GtkBox" id="header_suffix_box">
        <property name="spacing">9</property>
        <property name="halign">center</property>
        <property name="valign">center</property>

        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Only running</property>
          </object>
        </child>

        <child>
          <object class="GtkSwitch" id="show_only_running_switch">
            <property name="valign">center</property>
          </object>
        </child>

        <child>
          <object class="GtkBox" id="create_container_box">

            <child>
              <object class="GtkButton" id="create_container_button">
                <style>
                  <class name="flat"/>
                </style>
                <property name="action-name">containers-group.create-container</property>
                <property name="icon-name">list-add-symbolic</property>
              </object>
            </child>

          </object>
        </child>

      </object>
    </property>

    <child>
      <object class="GtkListBox" id="list_box">
        <style>
          <class name="boxed-list"/>
        </style>
        <property name="selection-mode">none</property>
      </object>
    </child>

  </template>
</interface>
